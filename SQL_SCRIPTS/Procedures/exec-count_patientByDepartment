DELIMITER $$
DROP PROCEDURE if exists count_patientByDepartment;
CREATE procedure _clinic.count_patientByDepartment()
BEGIN
	SELECT D.Department, COUNT(P.ID) AS "Number of Patients" 
    FROM patient AS P
    INNER JOIN department AS D
    WHERE P.Department_ID=D.Department_ID
    group by P.Department_id;
END$$
DELIMITER ;
